\ProvidesPackage{gm-math}
\usepackage{amsmath}
\usepackage{xifthen}

\newcommand{\dd}[2][]{
\ifthenelse{\equal{#1}{}}
    {\def\temp {\mathrm{d}}}
    {\def\temp {\mathrm{d}^{#1}}}
\mathop{}\!\temp #2}
\newcommand{\pd}[2][]{
\ifthenelse{\equal{#1}{}}
    {\def\temp {\partial}}
    {\def\temp {\partial^{#1}}}
\temp #2}
\newcommand{\dv}[3][]{\frac{\dd[#1]{#2}}{\dd[#1]{#3}}}
\newcommand{\pdv}[3][]{\frac{\pd[#1]{#2}}{\pd[#1]{#3}}}

\newcommand{\Grad}{\nabla}
\newcommand{\Div}{\nabla\cdot}
\newcommand{\Curl}{\nabla\times}
\newcommand{\Lapl}{\Delta}

\newcommand{\abs}[1]{\left|#1\right|}
